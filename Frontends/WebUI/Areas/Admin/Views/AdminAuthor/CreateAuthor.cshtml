@model CreateAuthorDto

@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Author</h4>
                        <p class="card-subtitle mb-4">Enter the author information that you want to add in the box below. After data entry, you can complete your process by clicking the save button.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAuthorName">Author Name - Surname</label>
                                <input type="text" class="form-control" id="exampleInputAuthorName" asp-for="Name" placeholder="Author name & surname...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAuthorDescription">Author Description</label>
                                <input type="text" class="form-control" id="exampleInputAuthorDescription" asp-for="Description" placeholder="Author description...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAuthorImageUrl">Author Image</label>
                                <input type="text" class="form-control" id="exampleInputAuthorImageUrl" asp-for="ImageUrl" placeholder="Author Image Url...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Author</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>