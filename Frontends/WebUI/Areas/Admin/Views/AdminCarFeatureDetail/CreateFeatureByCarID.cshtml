@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "CreateFeatureByCarID";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Features to Car</h4>
                        <p class="card-subtitle mb-4">
                            You can add features the car below.
                        </p>
                        <form method="post" class="d-flex flex-column col-2 g-y">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check" style="height: 30px">
                                    <input type="hidden" asp-for="@Model[i].FeatureID" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                    <input type="checkbox" class="form-check-input" />
                                    <label class="form-check-label">@Model[i].Name</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-primary">Add features to Car!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>