@model List<ResultLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Location Information Page</h4>
                        <p class="card-subtitle mb-4">
                            This is the page showing the pick-up & drop-off locations of cars. At the bottom of this page, you can see the car rental point location information. On the right-side buttons, you can access the map information for cars.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Location</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Show on the map</th>
                                    </tr>
                                </thead>
                                @if (Model.Count == 0)
                                {
                                    <tbody>
                                        <tr>
                                            <td><h4>There is nothing to show here yet!</h4></td>
                                        </tr>
                                    </tbody>
                                }
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/Admin/AdminLocation/LocationDetail/@item.LocationID" class="btn btn-outline-dark">Show on the map</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Add new Location</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>