
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <div class="form-group">
            <input type="email" class="form-control" readonly placeholder="The Car You Want to Take" asp-for="Car">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Name" asp-for="Name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Surname" asp-for="Surname">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Your Email" asp-for="Email">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Your Phone Number" asp-for="Phone">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Pick Up Location" asp-for="PickUpLocation">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Drop Off Location" asp-for="DropOffLocation">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Your Age" asp-for="Age">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Driver's Licence Year" asp-for="LicenceYear">
        </div>
        <div class="form-group">
            <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="If you want to add something you can write here."></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Complete the Reservation!" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>